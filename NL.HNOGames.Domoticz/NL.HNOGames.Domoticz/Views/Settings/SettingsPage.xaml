<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NL.HNOGames.Domoticz.Views.Settings.SettingsPage"
             xmlns:resources="clr-namespace:NL.HNOGames.Domoticz.Resources;assembly=NL.HNOGames.Domoticz"
             xmlns:custcontrol="clr-namespace:NL.HNOGames.Domoticz.Controls;assembly=NL.HNOGames.Domoticz"
             Style="{StaticResource ContentPageType}">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout HorizontalOptions="FillAndExpand" Orientation="Vertical">

                <StackLayout.Padding>
                    <OnIdiom x:TypeArguments="Thickness">
                        <OnIdiom.Phone>20,20,20,20</OnIdiom.Phone>
                        <OnIdiom.Tablet>150,30,150,30</OnIdiom.Tablet>
                    </OnIdiom>
                </StackLayout.Padding>
                
                <StackLayout x:Name="lyPremium">
                    <Label Text="{resources:Translate premium_category}" LineBreakMode="NoWrap"
                           Style="{StaticResource HeaderType}" Margin="0,10,0,0" />
                    <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                                 Orientation="Horizontal" Padding="0,10,0,0">
                        <StackLayout HorizontalOptions="StartAndExpand" VerticalOptions="Center" Orientation="Vertical">
                            <Label Text="{resources:Translate premium_title}" VerticalOptions="CenterAndExpand"
                                   HorizontalOptions="Start" LineBreakMode="NoWrap"
                                   Style="{StaticResource SettingsDetailType}" />
                        </StackLayout>
                        <custcontrol:ExtendedButton Padding="10,0,10,0" Text="Buy" HorizontalOptions="End" VerticalOptions="Center"
                                Clicked="btnBuyPremium_Clicked">
                        </custcontrol:ExtendedButton>
                        <custcontrol:ExtendedButton Padding="10,0,10,0" x:Name="btnRestore" Text="Restore" HorizontalOptions="End" VerticalOptions="Center"
                                Clicked="BtnRestore_OnClicked">
                        </custcontrol:ExtendedButton>
                    </StackLayout>
                </StackLayout>

                <Label Text="{resources:Translate title_dashboard}" LineBreakMode="NoWrap"
                       Style="{StaticResource HeaderType}" Margin="0,10,0,0" />
                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                             Orientation="Horizontal" Padding="0,10,0,0">
                    <StackLayout HorizontalOptions="StartAndExpand" VerticalOptions="Center" Orientation="Vertical">
                        <Label Text="{resources:Translate enable_items}" VerticalOptions="CenterAndExpand"
                               HorizontalOptions="Start" LineBreakMode="NoWrap"
                               Style="{StaticResource SettingsDetailType}" />
                    </StackLayout>
                    <custcontrol:ExtendedButton Padding="10,0,10,0" Text="Ok" HorizontalOptions="End" VerticalOptions="Center"
                            Clicked="btnEnableScreens_Clicked">
                    </custcontrol:ExtendedButton>
                </StackLayout>

                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                             Orientation="Horizontal" Padding="0,10,0,0">
                    <StackLayout HorizontalOptions="StartAndExpand" VerticalOptions="Center" Orientation="Vertical">
                        <Label Text="{resources:Translate sort_dashboardLikeServer_title}"
                               VerticalOptions="CenterAndExpand" HorizontalOptions="Start"
                               Style="{StaticResource SettingsDetailType}" />
                        <Label x:Name="lblSort" Text="{resources:Translate sort_dashboardLikeServer_on}"
                               VerticalOptions="CenterAndExpand" HorizontalOptions="Start"
                               Style="{StaticResource DetailSmallType}" />
                    </StackLayout>
                    <Switch x:Name="swNoSort" VerticalOptions="Center" HorizontalOptions="End" />
                </StackLayout>

                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                             Orientation="Horizontal" Padding="0,10,0,0">
                    <StackLayout HorizontalOptions="StartAndExpand" VerticalOptions="Center" Orientation="Vertical">
                        <Label Text="{resources:Translate switch_buttons_title}" VerticalOptions="CenterAndExpand"
                               HorizontalOptions="Start" Style="{StaticResource SettingsDetailType}" />
                        <Label x:Name="lblShowSwitch" Text="{resources:Translate switch_buttons_on}"
                               VerticalOptions="CenterAndExpand" HorizontalOptions="Start"
                               Style="{StaticResource DetailSmallType}" />
                    </StackLayout>
                    <Switch x:Name="swShowSwitch" VerticalOptions="Center" HorizontalOptions="End" />
                </StackLayout>

                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                             Orientation="Horizontal" Padding="0,10,0,10">
                    <StackLayout HorizontalOptions="StartAndExpand" VerticalOptions="Center" Orientation="Vertical">
                        <Label Text="{resources:Translate extra_data_title}" VerticalOptions="CenterAndExpand"
                               HorizontalOptions="Start" Style="{StaticResource SettingsDetailType}" />
                        <Label x:Name="lblExtraData" Text="{resources:Translate show_extra_data_on}"
                               VerticalOptions="CenterAndExpand" HorizontalOptions="Start"
                               Style="{StaticResource DetailSmallType}" />
                    </StackLayout>
                    <Switch x:Name="swExtraData" VerticalOptions="Center" HorizontalOptions="End" />
                </StackLayout>

                <Label Text="{resources:Translate category_server}" LineBreakMode="NoWrap"
                       Style="{StaticResource HeaderType}" Margin="0,10,0,0" />
                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                             Orientation="Horizontal" Padding="0,10,0,0" IsVisible="False">
                    <StackLayout HorizontalOptions="StartAndExpand" VerticalOptions="Center" Orientation="Vertical">
                        <Label Text="{resources:Translate multi_server}"
                               VerticalOptions="CenterAndExpand" HorizontalOptions="Start"
                               Style="{StaticResource SettingsDetailType}" />
                        <Label Text="{resources:Translate multi_server_settings}"
                               VerticalOptions="CenterAndExpand" HorizontalOptions="Start"
                               Style="{StaticResource DetailSmallType}" />
                    </StackLayout>
                    <Switch x:Name="swEnableMultiServer" VerticalOptions="Center" HorizontalOptions="End" />
                </StackLayout>

                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                             Orientation="Horizontal" Padding="0,10,0,10">
                    <StackLayout HorizontalOptions="StartAndExpand" VerticalOptions="Center" Orientation="Vertical">
                        <Label Text="{resources:Translate server_settings}" VerticalOptions="CenterAndExpand"
                               HorizontalOptions="Start" LineBreakMode="NoWrap"
                               Style="{StaticResource SettingsDetailType}" />
                    </StackLayout>
                    <custcontrol:ExtendedButton Padding="10,0,10,0" Text="Ok" HorizontalOptions="End" VerticalOptions="Center"
                            Clicked="btnServerSetup_Clicked">
                    </custcontrol:ExtendedButton>
                </StackLayout>

                <Label Text="{resources:Translate category_generic}" LineBreakMode="NoWrap"
                       Style="{StaticResource HeaderType}" />
                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                             Orientation="Horizontal" Padding="0,10,0,10">
                    <StackLayout HorizontalOptions="StartAndExpand" VerticalOptions="Center" Orientation="Vertical">
                        <Label Text="{resources:Translate startup_screen}" VerticalOptions="CenterAndExpand"
                               HorizontalOptions="Start" LineBreakMode="NoWrap"
                               Style="{StaticResource SettingsDetailType}" />
                    </StackLayout>
                    <Picker Style="{StaticResource PickerType}" x:Name="txtStartScherm" HorizontalOptions="End"
                            MinimumWidthRequest="100" />
                </StackLayout>
                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                             Orientation="Horizontal" Padding="0,10,0,10">
                    <StackLayout HorizontalOptions="StartAndExpand" VerticalOptions="Center" Orientation="Vertical">
                        <Label Text="{resources:Translate category_talk_back}" VerticalOptions="CenterAndExpand"
                               HorizontalOptions="Start" Style="{StaticResource SettingsDetailType}" />
                        <Label Text="{resources:Translate set_talk_back_on}" VerticalOptions="CenterAndExpand"
                               HorizontalOptions="Start" Style="{StaticResource DetailSmallType}" />
                    </StackLayout>
                    <Switch x:Name="swEnableTalkBack" VerticalOptions="Center" HorizontalOptions="End" />
                </StackLayout>

                <Label Text="{resources:Translate notification_screen_title}" LineBreakMode="NoWrap"
                       Style="{StaticResource HeaderType}" Margin="0,10,0,0" />
                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                             Orientation="Horizontal" Padding="0,10,0,10">
                    <StackLayout HorizontalOptions="StartAndExpand" VerticalOptions="Center" Orientation="Vertical">
                        <Label Text="{resources:Translate enable_notifications_title}"
                               VerticalOptions="CenterAndExpand" HorizontalOptions="Start"
                               Style="{StaticResource SettingsDetailType}" />
                        <Label Text="{resources:Translate enable_notifications}" VerticalOptions="CenterAndExpand"
                               HorizontalOptions="Start" Style="{StaticResource DetailSmallType}" />
                    </StackLayout>
                    <Switch x:Name="swEnableNotifications" VerticalOptions="Center" HorizontalOptions="End" />
                </StackLayout>

                <Label Text="{resources:Translate category_theme}" LineBreakMode="NoWrap"
                       Style="{StaticResource HeaderType}" Margin="0,10,0,0" />
                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                             Orientation="Horizontal" Padding="0,10,0,0">
                    <StackLayout HorizontalOptions="StartAndExpand" VerticalOptions="Center" Orientation="Vertical">
                        <Label Text="{resources:Translate set_dark_theme}" VerticalOptions="CenterAndExpand"
                               HorizontalOptions="Start" LineBreakMode="NoWrap"
                               Style="{StaticResource SettingsDetailType}" />
                    </StackLayout>
                    <Switch x:Name="swDarkTheme" VerticalOptions="Center" HorizontalOptions="End" />
                </StackLayout>

                <Label Text="{resources:Translate cameraActivity_name}" LineBreakMode="NoWrap"
                       Style="{StaticResource HeaderType}" Margin="0,10,0,0" />
                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                             Orientation="Horizontal" Padding="0,10,0,0">
                    <StackLayout HorizontalOptions="StartAndExpand" VerticalOptions="Center" Orientation="Vertical">
                        <Label Text="{resources:Translate cameraActivity_name}" VerticalOptions="CenterAndExpand"
                               HorizontalOptions="Start" LineBreakMode="NoWrap"
                               Style="{StaticResource SettingsDetailType}" />
                    </StackLayout>
                    <custcontrol:ExtendedButton Padding="10,0,10,0" x:Name="btnCameras" Text="Ok" HorizontalOptions="End" VerticalOptions="Center"
                            Clicked="BtnCameras_OnClicked">
                    </custcontrol:ExtendedButton>
                </StackLayout>

                <Label Text="{resources:Translate category_Speech}" LineBreakMode="NoWrap"
                           Style="{StaticResource HeaderType}" Margin="0,10,0,0" />
                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                                 Orientation="Horizontal" Padding="0,10,0,0" IsVisible="True">
                    <StackLayout HorizontalOptions="StartAndExpand" VerticalOptions="Center" Orientation="Vertical">
                        <Label Text="{resources:Translate category_Speech}" VerticalOptions="CenterAndExpand"
                                   HorizontalOptions="Start" LineBreakMode="NoWrap"
                                   Style="{StaticResource SettingsDetailType}" />
                    </StackLayout>
                    <custcontrol:ExtendedButton Padding="10,0,10,0" x:Name="btnSpeechSettings" Text="Ok" HorizontalOptions="End" VerticalOptions="Center"
                                Clicked="btnSpeechSettings_Clicked">
                    </custcontrol:ExtendedButton>
                </StackLayout>

                <Label Text="{resources:Translate category_QRCode}" LineBreakMode="NoWrap"
                       Style="{StaticResource HeaderType}" Margin="0,10,0,0" />
                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                             Orientation="Horizontal" Padding="0,10,0,0" IsVisible="True">
                    <StackLayout HorizontalOptions="StartAndExpand" VerticalOptions="Center" Orientation="Vertical">
                        <Label Text="{resources:Translate category_QRCode}" VerticalOptions="CenterAndExpand"
                               HorizontalOptions="Start" LineBreakMode="NoWrap"
                               Style="{StaticResource SettingsDetailType}" />
                    </StackLayout>
                    <custcontrol:ExtendedButton Padding="10,0,10,0" x:Name="btnQRCode" Text="Ok" HorizontalOptions="End" VerticalOptions="Center"
                            Clicked="btnQRCode_Clicked">
                    </custcontrol:ExtendedButton>
                </StackLayout>

                <Label Text="{resources:Translate category_advanced}" LineBreakMode="NoWrap"
                       Style="{StaticResource HeaderType}" Margin="0,10,0,0" />
                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                             Orientation="Horizontal" Padding="0,10,0,0">
                    <StackLayout HorizontalOptions="StartAndExpand" VerticalOptions="Center" Orientation="Vertical">
                        <Label Text="{resources:Translate button_status_log}" VerticalOptions="CenterAndExpand"
                               HorizontalOptions="Start" LineBreakMode="NoWrap"
                               Style="{StaticResource SettingsDetailType}" />
                    </StackLayout>
                    <custcontrol:ExtendedButton Padding="10,0,10,0" x:Name="btnShowLog" Text="Ok" HorizontalOptions="End" VerticalOptions="Center"
                            Clicked="btnShowLog_Clicked">
                    </custcontrol:ExtendedButton>
                </StackLayout>

                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                             Orientation="Horizontal" Padding="0,10,0,0">
                    <StackLayout HorizontalOptions="StartAndExpand" VerticalOptions="Center" Orientation="Vertical">
                        <Label Text="{resources:Translate title_vars}" VerticalOptions="CenterAndExpand"
                               HorizontalOptions="Start" LineBreakMode="NoWrap"
                               Style="{StaticResource SettingsDetailType}" />
                    </StackLayout>
                    <custcontrol:ExtendedButton Padding="10,0,10,0" x:Name="btnUserVars" Text="Ok" HorizontalOptions="End" VerticalOptions="Center"
                            Clicked="btnUserVars_Clicked">
                    </custcontrol:ExtendedButton>
                </StackLayout>
                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                             Orientation="Horizontal" Padding="0,10,0,0">
                    <StackLayout HorizontalOptions="StartAndExpand" VerticalOptions="Center" Orientation="Vertical">
                        <Label Text="{resources:Translate title_events}" VerticalOptions="CenterAndExpand"
                               HorizontalOptions="Start" LineBreakMode="NoWrap"
                               Style="{StaticResource SettingsDetailType}" />
                    </StackLayout>
                    <custcontrol:ExtendedButton Padding="10,0,10,0" x:Name="btnEvents" Text="Ok" HorizontalOptions="End" VerticalOptions="Center"
                            Clicked="btnEvents_Clicked">
                    </custcontrol:ExtendedButton>
                </StackLayout>
                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                             Orientation="Horizontal" Padding="0,10,0,0" IsVisible="True">
                    <StackLayout HorizontalOptions="StartAndExpand" VerticalOptions="Center" Orientation="Vertical">
                        <Label Text="{resources:Translate category_debug}" VerticalOptions="CenterAndExpand"
                               HorizontalOptions="Start" LineBreakMode="NoWrap"
                               Style="{StaticResource SettingsDetailType}" />
                    </StackLayout>
                    <custcontrol:ExtendedButton Padding="10,0,10,0" Text="Ok" HorizontalOptions="End" VerticalOptions="Center"
                            Clicked="btnDebugInfo_Clicked">
                    </custcontrol:ExtendedButton>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>